<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <table border="1">
      <thead>
        <tr>
          <th>Tanggal</th>
          <th>Jam datang</th>
          <th>Jam pulang</th>
          <th>Pelanggaran</th>
          <th>Denda</th>
        </tr>
      </thead>
      <tbody>
        <% var count = 0 %>
        <% data_rekaps.forEach(detail => { %>
        <tr>
          <td><%= detail.tanggal %></td>
          <td><%= detail.jam_datang %></td>
          <td><%= detail.jam_pulang %></td>
          <td><%= detail.Rule.pelanggaran %></td>
          <td><%= detail.Rule.denda %></td>
        </tr>
        <% count += detail.Rule.denda }) %>
        <tr>
          <td colspan="4">Total denda</td>
          <td><%= count %></td>
        </tr>
        <tr>
          <td colspan="4"><b>Gaji bersih</b></td>
          <td><b><%= data_jabatans.gaji - count %></b></td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
